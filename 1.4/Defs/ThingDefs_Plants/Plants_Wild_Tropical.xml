			<texPath>Things/Plant/TreeTallPalm</texPath>
			<graphicClass>Graphic_Random</graphicClass>
			<shadowData>
				<volume>(0.05, 0.6, 0.15)</volume>
				<offset>(0,0,-0.25)</offset>
			</shadowData>
		</graphicData>
		<statBases>
			<Beauty>2</Beauty>
			<BeautyOutdoors>2</BeautyOutdoors>
		</statBases>
		<plant>
			<growDays>48</growDays>
